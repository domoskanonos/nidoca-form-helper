{
  "name": "@domoskanonos/nidoca-form-helper",
  "author": "Dominik Bruhn",
  "license": "MIT",
  "version": "1.0.7",
  "description": "Der Nidoca Form Helfer, durchl√§uft alle HTML Elemente eines Elternteils und such automatisch alle Form Elemente und baut aus den aktuellen Werten ein Objekt.",
  "main": "lib/index.js",
  "module": "./source/index.js",
  "devDependencies": {
    "@domoskanonos/nidoca-testing": "1.0.11"
  },
  "scripts": {
    "pretty": "prettier --write \"./**/*.{ts,json}\"",
    "check-update": "ncu",
    "upgrade": "ncu -u",
    "ts": "tsc",
    "ts:watch": "tsc --watch",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "lit-analyzer": "lit-analyzer \"src/**/*.{js,ts}\"",
    "test": "wtr",
    "test:watch": "npm run test -- --watch",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "build": "npm i && npm run ts && npm run eslint && npm run lit-analyzer && npm run test && npm run docs",
    "preversion": "npm run ts",
    "new-patch": "npm version patch -m \"new patch version: %s\" --force",
    "new-minor": "npm version minor -m \"new minor version: %s\" --force",
    "new-major": "npm version major -m \"new major version: %s\" --force",
    "postversion": "npm publish --access=public",
    "unpublish": "npm unpublish --force"
  }
}
